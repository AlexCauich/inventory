body
    background-color #f6f6f6
    margin 0px
    font-size 14px
.mtop16
    margin-top 6px

.box
    background-color #fff
    position absolute
    width 500px
    border-radius 10px 
    border 1px solid #d6d6d6
    .btn
        width 100%
        background-color #E85722
        border 0px
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    .inside
        padding 16px
    
    .header
        background-color #ffffff
        padding 16px
        border-radius 10px 10px 0px 0px
        a 
            img
                width 35%
                display block
                margin 0px auto 

    .footer
        text-align center
        a
            display inline-block
            font-size .8em
            &:last-child
                margin-left 24px

.box_login
    left calc(50% - 250px)
    top calc(50% - 210px)

.box_register
    left calc(50% - 250px)
    top calc(50% - 338px)